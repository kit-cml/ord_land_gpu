# Top-most EditorConfig file
root = true

# Default settings for all file types
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

# Override settings for C++ files
[*.{cpp,h,cuh}]
indent_style = space
indent_size = 4

# Override settings for Markdown files
[*.md]
max_line_length = off
